 generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User { 
  id          String @id @default(cuid())
  email       String @unique
  firstName   String 
  lastName    String
  
  otpRecord Otp?
}

model Otp {
  id String @id @default(cuid())
  userId String @unique
  otp String 
  user User @relation(fields:[userId], references: [id], onDelete: Cascade)
}